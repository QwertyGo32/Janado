<section class="FAQ-banner">
    <div class="FAQ-banner__wrapper"><h1 class="FAQ-banner__wrapper_title">{{ section.settings.heading }}</h1>
        <p class="FAQ-banner__wrapper_text">{{ section.settings.text }}</p></div>
</section>

{% style %}
    {% if section.settings.font_on_off %}
        .FAQ-banner__wrapper_title
        {
        font-family:	{% if section.settings.select_fonts != blank %}
                            {{ section.settings.select_fonts }}
                        {% else %}
                            {{ section.settings.title_font.family }}, {{ section.settings.title_font.fallback_families }}
                        {% endif %};
        font-weight: 	{{ section.settings.title_font.weight }};
        font-style: 	{{ section.settings.title_font.style }};
        font-size: {{  section.settings.header_size }}px;
        line-height: {{ section.settings.header_line }};
        color: {{ section.settings.title_color }}
        }
        .FAQ-banner__wrapper_text
        {
        font-family:	{% if section.settings.select_fonts_body != blank %}
                            {{ section.settings.select_fonts_body }}
                        {% else %}
                            {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }}
                        {% endif %};
        font-weight: 	{{ section.settings.text_font.weight }};
        font-style: 	{{ section.settings.text_font.style }};
        font-size: {{  section.settings.text_size }}px;
        line-height: {{ section.settings.text_line }};
        color: {{ section.settings.text_color }}
        }
    {% endif %}
{% endstyle %}

{% schema %}
{
"name": "FAQ Banner",
"settings": [
{
"type": "text",
"id": "heading",
"label": "Heading"
},
{
"type": "textarea",
"id": "text",
"label": "Text",
"info": "45 characters maximum"
},
{
"type": "checkbox",
"id": "font_on_off",
"default": false,
"label": "Use Custom Font"
},
{
"type": "select",
"id": "select_fonts",
"label": "User Font Title",
"options": [
{
"value": "",
"label": "none"
},
{
"value": "Sohne-Buch",
"label": "Sohne-Buch"
},
{
"value": "Sohne-Fett",
"label": "Sohne-Fett"
},
{
"value": "Sohne-Halbfett",
"label": "Sohne-Halbfett"
},
{
"value": "Sohne-Leicht",
"label": "Sohne-Leicht"
}
],
"default": ""
},
{
"type": "font_picker",
"id": "title_font",
"label": "Font",
"default": "work_sans_n6"
},
{
"type": "color",
"id": "title_color",
"label": "Title Color",
"default": "#FFE300"
},
{
"type": "range",
"id": "header_size",
"label": "Heading base size",
"default": 100,
"min": 36,
"max": 100,
"step": 1,
"unit": "px"
},
{
"type": "range",
"id": "header_line",
"label": "Heading Line Height",
"default": 1.2,
"min": 1,
"max": 3,
"step": 0.1,
"unit": "px"
},
{
"type": "header",
"content": "Body text"
},
{
"type": "select",
"id": "select_fonts_body",
"label": "User Font Text",
"options": [
{
"value": "",
"label": "none"
},
{
"value": "Sohne-Buch",
"label": "Sohne-Buch"
},
{
"value": "Sohne-Fett",
"label": "Sohne-Fett"
},
{
"value": "Sohne-Halbfett",
"label": "Sohne-Halbfett"
},
{
"value": "Sohne-Leicht",
"label": "Sohne-Leicht"
}
],
"default": ""
},
{
"type": "font_picker",
"id": "text_font",
"label": "Font",
"default": "work_sans_n6"
},
{
"type": "color",
"id": "text_color",
"label": "Text Color",
"default": "#FFF"
},
{
"type": "range",
"id": "text_size",
"label": "Text base size",
"default": 24,
"min": 16,
"max": 60,
"step": 1,
"unit": "px"
},
{
"type": "range",
"id": "text_line",
"label": "Text Line Height",
"default": 1.3,
"min": 1,
"max": 3,
"step": 0.1,
"unit": "px"
}
]
}
{% endschema %}