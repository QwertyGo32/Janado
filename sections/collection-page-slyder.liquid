<section class="advantages">
    <div class="advantages__wrapper">
    {%- if request.page_type contains 'product' -%}
            <p class="advantages__wrapper_text-single">{{- section.settings.title_text | escape -}}</p>
            <p class="advantages__wrapper_title-single">{{- section.settings.title | escape -}}</p>
        {% else %}
            <p class="advantages__wrapper_title">{{- section.settings.title | escape -}}</p>
            <p class="advantages__wrapper_text">{{- section.settings.title_text | escape -}}</p>
        {% endif %}
        <div class="swiper-container advantages__wrapper_cards">
            <div class="swiper-wrapper">
                {%- for block in section.blocks -%}

                    <a href="{{- block.settings.link | escape -}}" class="advantage-card swiper-slide">
                        <p class="advantage-card__title">{{- block.settings.heading | escape -}}</p>
                        {%- if block.settings.image != blank -%}
                        <img src="{{ block.settings.image.src | img_url: 'master' }}" alt="">
                            <p class="advantage-card__text">{{- block.settings.text | escape -}}</p>
                        {% endif %}
                    </a>
                {% endfor %}
            </div>
        </div>
        <div class="advantages-cards-desktop advantages__wrapper_cards">
            {%- for block in section.blocks -%}

                <a href="{{- block.settings.link | escape -}}" class="advantage-card swiper-slide">
                    <p class="advantage-card__title">{{- block.settings.heading | escape -}}</p>
                    {%- if block.settings.image != blank -%}
                        <img src="{{ block.settings.image.src | img_url: 'master' }}" alt="">
                    {% endif %}
                    <p class="advantage-card__text">{{- block.settings.text | escape -}}</p>
                </a>

            {% endfor %}
        </div>
    </div>
</section>

{% schema %}
{
"name": "Slideshow Pages",
"max_blocks": 5,
"settings": [
{
"type": "text",
"id": "title",
"label": "Title"
},
{
"type": "textarea",
"id": "title_text",
"label": "Title Text",
"info": "45 characters maximum"
}
],
"blocks": [
{
"type": "image",
"name": "Image slide",
"settings": [
{
"type": "image_picker",
"id": "image",
"label": "Image"
},
{
"type": "text",
"id": "heading",
"label": "Heading"
},
{
"type": "textarea",
"id": "text",
"label": "Text",
"info": "45 characters maximum"
},
{
"type": "url",
"id": "link",
"label": "Link"
}
]
}
]
}
{% endschema %}

